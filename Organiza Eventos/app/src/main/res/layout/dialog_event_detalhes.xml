<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCodigoOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Código da Oferta:"
            android:textColor="@color/azul"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nome:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tipo:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Descrição:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Categoria:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvPublicoAlvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Público Alvo:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Local:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Data:"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Hora:"
            android:textColor="@color/azul" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Áreas envolvidas:"
            android:textAlignment="center"
            android:textColor="@color/azul"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Add TextViews for categories -->
        <TextView
            android:id="@+id/tvBelezaEstetica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Beleza e Estética: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvBemEstar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bem-Estar: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvComunicacaoMarketing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Comunicação e Marketing: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvDesignArtesArquitetura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Design, Artes e Arquitetura: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvDesenvolvimentoSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Desenvolvimento Social: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvEducacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Educação: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvGastronomiaAlimentacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Gastronomia e Alimentação: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvGestaoNegocios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Gestão e Negócios: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvIdiomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Idiomas: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvMeioAmbienteSeguranca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Meio Ambiente e Segurança: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvModa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Moda: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvSaude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Saúde: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvTecnologiaInformacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tecnologia da Informação: "
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/tvTurismoHospitalidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Turismo e Hospitalidade: "
            android:textColor="@color/azul" />

    </LinearLayout>
</ScrollView>
